# AnythingLLM Configuration
ANYTHINGLLM_PORT=3000
ANYTHINGLLM_HOST=0.0.0.0
STORAGE_DIR=./data/anythingllm

# Ollama Configuration
LLM_MODEL=llama3
OLLAMA_HOST=http://ollama:11434
OLLAMA_BASE_PATH=/api

# Vector Database Configuration
VECTOR_DB=chroma
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Security Settings
ENABLE_HTTPS=false
JWT_SECRET=your_jwt_secret_here_change_this_in_production
PASSWORD_SALT=your_password_salt_here_change_this_in_production

# User Interface Settings
ENABLE_MULTI_USER_MODE=true
ENABLE_USER_SIGNUP=false  # Set to true to allow new user registrations

# Document Processing Settings
MAX_DOCUMENT_SIZE_MB=50
DOCUMENT_CHUNK_SIZE=1000
DOCUMENT_CHUNK_OVERLAP=200

# System Settings
NODE_ENV=production
